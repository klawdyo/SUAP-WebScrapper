{
  "name": "tutorial-rest-api-nodejs-express-sqlite-typescript",
  "version": "1.16.1",
  "main": "./src/index.ts",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"ts-node  -r tsconfig-paths/register ./src/server.ts\"",
    "dev:depre": "nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"ts-node ./src/index.ts\"",
    "build": "tsc",
    "start": "node ./dist/index.js",
    "test": "yarn test:migrate && cross-env NODE_ENV=test jest --testTimeout=30000",
    "test:migrate": "cross-env DATABASE_URL='file:./test.db' prisma migrate deploy",
    "test:reset": "rimraf ./prisma/test.db",
    "test:coverage": "jest --collectCoverageFrom=src/**/*.ts --coverage",
    "test:watch": "jest --watch",
    "posttest": "echo 'Removendo banco de dados de teste' && yarn test:reset"
  },
  "dependencies": {
    "@prisma/client": "^4.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.17.1",
    "helmet": "^5.1.0",
    "jest": "^28.1.3",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "klawtil": "^0.14.1",
    "moment": "^2.29.4",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^16.4.14",
    "@types/sqlite3": "^3.1.7",
    "nodemon": "^2.0.12",
    "prisma": "^4.1.1",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.2.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.3.5"
  }
}
